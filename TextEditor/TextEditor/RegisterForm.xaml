<Window x:Class="KMA.APRZP2019.TextEditorProject.TextEditor.RegisterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KMA.APRZP2019.TextEditorProject.TextEditor"
        mc:Ignorable="d"
        Title="RegisterForm" Height="200" Width="300">
    <Grid>
        <Label Content="Enter Username" HorizontalAlignment="Left" Margin="24,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Enter Password" HorizontalAlignment="Left" Margin="24,57,0,0" VerticalAlignment="Top"/>
        <Label Content="Repeat Password" HorizontalAlignment="Left" Margin="24,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Height="23" Margin="128,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Height="23" Margin="128,61,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="PasswordR" HorizontalAlignment="Left" Height="23" Margin="128,94,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Register" Content="Register" HorizontalAlignment="Left" Margin="99,134,0,0" VerticalAlignment="Top" Width="75" Click="Register_Click"/>
        
    </Grid>
</Window>
